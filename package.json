{
  "name": "reschume",
  "description": "A comprehensive schema for documenting résumés.",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "Dhruv Bhanushali",
    "url": "https://dhruvkb.dev"
  },
  "license": "GFDL-1.3-only",
  "homepage": "https://dhruvkb.github.io/reschume",
  "repository": "github:dhruvkb/reschume",
  "bugs": "https://github.com/dhruvkb/reschume/issues",
  "scripts": {
    "prepare": "husky install",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "validate:eg": "node scripts/validate_eg.mjs",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs"
  },
  "devDependencies": {
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "chalk": "^5.0.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "vitepress": "^1.0.0-alpha.4",
    "vue": "^3.2.37"
  },
  "lint-staged": {
    "*.{json,js,mjs,css,md,vue}": "prettier --write"
  },
  "imports": {
    "#schema/*": "./schema/*",
    "#sample_data/*": "./sample_data/*"
  }
}
